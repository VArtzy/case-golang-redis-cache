{
  "app": {
    "name": "golang-clean-architecture"
  },
  "web": {
    "prefork": true,
    "port": 3000
  },
  "log": {
    "level": 6
  },
  "redis": {
      "host": "localhost:6379",
      "database": 0
  },
  "database": {
    "username": "root",
    "password": "",
    "host": "localhost",
    "port": 3306,
    "name": "golang_redis_cache",
    "pool": {
      "idle": 10,
      "max": 100,
      "lifetime": 300
    }
  },
  "kafka": {
    "bootstrap": {
      "servers": "localhost:9092"
    },
    "group": {
      "id": "golang-clean-architecture"
    },
    "auto": {
      "offset": {
        "reset": "earliest"
      }
    }
  }
}
